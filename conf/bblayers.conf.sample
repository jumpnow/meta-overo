# POKY_BBLAYERS_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
POKY_BBLAYERS_CONF_VERSION = "2"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  ${HOME}/poky-hardknott/meta \
  ${HOME}/poky-hardknott/meta-poky \
  ${HOME}/poky-hardknott/meta-openembedded/meta-oe \
  ${HOME}/poky-hardknott/meta-openembedded/meta-networking \
  ${HOME}/poky-hardknott/meta-openembedded/meta-perl \
  ${HOME}/poky-hardknott/meta-openembedded/meta-python \
  ${HOME}/poky-hardknott/meta-security \
  ${HOME}/overo/meta-overo \
"
